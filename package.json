{
  "name": "app-weather",
  "version": "0.0.0",
  "description": "날씨 API를 활용한 일기예보 앱",
  "main": "src/index.js",
  "author": "Gunwoo Baik",
  "license": "MIT",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "concurrently \"esbuild src/index.ts --bundle --outdir=dist --platform=browser --target=esnext --format=esm --watch --sourcemap --alias:@/*=./src/* --loader:.css=text\" \"tailwindcss -i ./styles.css -o ./dist/styles.css --watch\"",
    "build": "node esbuild.config.js && npx tailwindcss -i ./styles.css -o ./dist/styles.css --minify"
  },
  "devDependencies": {
    "@types/node": "^22.13.0",
    "concurrently": "^9.1.2",
    "esbuild": "^0.21.1",
    "eslint": "^8.57.0",
